@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-sm table-hover">
    <tr>
        <td>Name</td>
        <td>Roles</td>
        <td>Operation</td>
    </tr>


    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <ShowRole user-id="@item.Id"></ShowRole>
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm"> Assign Role</a>
                    <a asp-action="AddClaim" asp-route-id="@item.Id" asp-controller="Female" class="btn btn-info btn-sm">Add Female Claim</a>
                </td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td>No record for Users!</td>
        </tr>
    }

</table>

