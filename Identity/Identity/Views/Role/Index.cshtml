@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="AddRole" asp-controller="Role" class="btn btn-info btn-sm my-2" >Add New Role</a>
<table class="table table-sm table-hover">
    <tr>
        <td>Name</td>
        <td>Operation</td>
    </tr>
    

    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        @item.Name
    </td>
    <td>
        <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm"> Update</a>
        <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> Delete</a>
    </td>
    
</tr>
        }
    }
    else
    {
        <tr>
            <td>No record for Roles!</td>
        </tr>
    }

</table>