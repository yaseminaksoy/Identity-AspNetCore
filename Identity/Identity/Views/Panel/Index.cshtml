@model AppUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-hover table-sm">
                <tr>
                    <th>Name: </th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Surname: </th>
                    <td>@Model.Surname</td>
                </tr>
                <tr>
                    <th>Email: </th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Phone: </th>
                    <td>@Model.PhoneNumber</td>
                </tr>

            </table>
        </div>
        <div class="col-md-4">
            <img src="~/img/@Model.PictureUrl" alt="@Model.Name" class="w-100 img-fluid img-thumbnail" />
        </div>
    </div>
</div>

